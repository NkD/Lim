<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.nkd.lim"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="5" android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:allowBackup="false" >
        <activity
            android:name="cz.nkd.lim.example.runner.ExamplesActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensor" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
       
        <activity android:name="cz.nkd.lim.example.Box2D" android:screenOrientation="portrait" android:configChanges="keyboard|keyboardHidden|screenSize|orientation" />
        <activity android:name="cz.nkd.lim.example.Box2DWithLight" android:screenOrientation="portrait" android:configChanges="keyboard|keyboardHidden|screenSize|orientation" />
        <activity android:name="cz.nkd.lim.example.Box2DMouseJoint" android:screenOrientation="portrait" android:configChanges="keyboard|keyboardHidden|screenSize|orientation" />
        <activity android:name="cz.nkd.lim.example.Box2DFixedTimeStep" android:screenOrientation="portrait" android:configChanges="keyboard|keyboardHidden|screenSize|orientation" />
        
    </application>

</manifest>